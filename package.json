{
  "name": "code-streamer",
  "displayName": "Code Streamer",
  "description": "The Gamified IDE Companion: AI 弹幕 + 虚拟打赏的“代码直播间”顶部横幅。",
  "version": "0.0.1",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/QEout/code-streamer"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codeStreamer.start",
    "onCommand:codeStreamer.openChatInput"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeStreamer.start",
        "title": "Code Streamer: Start"
      },
      {
        "command": "codeStreamer.focus",
        "title": "Code Streamer: Focus Panel",
        "icon": "$(play)"
      },
      {
        "command": "codeStreamer.refreshViewers",
        "title": "Code Streamer: Refresh Viewers",
        "icon": "$(refresh)"
      },
      {
        "command": "codeStreamer.openChatInput",
        "title": "Code Streamer: Open Chat Input",
        "icon": "$(comment)"
      }
    ],
    "keybindings": [
      {
        "command": "codeStreamer.openChatInput",
        "key": "ctrl+alt+enter",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "codeStreamerContainer",
          "title": "Code Streamer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "codeStreamerContainer": [
        {
          "type": "webview",
          "id": "codeStreamer.banner",
          "name": "Live Banner"
        }
      ]
    },
    "configuration": {
      "title": "Code Streamer",
      "properties": {
        "codeStreamer.debounceMs": {
          "type": "number",
          "default": 1200,
          "minimum": 200,
          "description": "停手触发分析的防抖时间（毫秒）。"
        },
        "codeStreamer.llm.baseUrl": {
          "type": "string",
          "default": "",
          "description": "OpenAI-compatible Base URL（例如 DeepSeek 的兼容地址）。"
        },
        "codeStreamer.llm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key（建议使用 Settings Sync 的 Secret Storage；此处先简单放设置项）。"
        },
        "codeStreamer.llm.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "模型名（OpenAI-compatible）。"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.6.3"
  }
}
